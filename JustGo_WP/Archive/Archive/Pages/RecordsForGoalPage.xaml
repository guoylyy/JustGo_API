<phone:PhoneApplicationPage x:Class="Archive.Pages.GoalsPopularPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:circleImage="clr-namespace:CircleImage;assembly=CircleImage"
                            xmlns:vm="clr-namespace:Archive.ViewModel"
                            xmlns:local="clr-namespace:Archive"
                            xmlns:converter="clr-namespace:Archive.Converter"
                            FontFamily="{StaticResource PhoneFontFamilyNormal}"
                            FontSize="{StaticResource PhoneFontSizeNormal}"
                            Foreground="{StaticResource PhoneForegroundBrush}"
                            SupportedOrientations="Portrait"
                            Orientation="Portrait"
                            mc:Ignorable="d"
                            shell:SystemTray.IsVisible="True"
                            shell:SystemTray.ForegroundColor="#FF23A7FC"
                            shell:SystemTray.Opacity="0.01"
                            Loaded="PhoneApplicationPage_Loaded">

    <phone:PhoneApplicationPage.Resources>
        <converter:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
    </phone:PhoneApplicationPage.Resources>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar BackgroundColor="#FFB3D3E8"
                              ForegroundColor="#FF23A7FC"
                              Mode="Minimized">
            <shell:ApplicationBarIconButton IconUri="/Assets/AppBar/refresh2.png"
                                            Text="refresh" />
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

    <!--LayoutRoot 是包含所有页面内容的根网格-->
    <Grid x:Name="LayoutRoot"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--TitlePanel 包含应用程序的名称和页标题-->
        <Grid x:Name="HeadGrid"
              Margin="24,27,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Goal - "
                       Foreground="{StaticResource SystemBlueBrush}"
                       FontFamily="Segoe WP Semibold"
                       FontSize="22" />
            <TextBlock Text="{Binding GoalName}"
                       Grid.Column="1"
                       Foreground="{StaticResource SystemBlueBrush}"
                       FontFamily="Segoe WP Semibold"
                       FontSize="22" />
        </Grid>


        <!--ContentPanel - 在此处放置其他内容-->
        <Grid x:Name="ContentPanel"
              Grid.Row="1"
              Margin="12,0,12,0">

            <Rectangle Fill="#FFEDEDED"
                       HorizontalAlignment="Left"
                       Height="672"
                       Margin="38,69,0,0"
                       VerticalAlignment="Top"
                       Width="7" />

            <phone:LongListSelector x:Name="RecordList"
                                    ItemsSource="{Binding Records}"
                                    Tap="RecordList_Tap">
                <phone:LongListSelector.DataContext>
                    <vm:RecordsForGoalViewModel />
                </phone:LongListSelector.DataContext>
                <phone:LongListSelector.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid VerticalAlignment="Top"
                                  Margin="10,0,0,0">
