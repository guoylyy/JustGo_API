                                  Fill="White"
                                  Height="27"
                                  Width="35" />
                            <TextBlock Grid.Column="1"
                                       Foreground="Black"
                                       Text="Encourages"
                                       FontSize="22"
                                       Margin="20,15,0,0"
                                       FontWeight="Bold" Height="30" />
                        </Grid>
                    </DataTemplate>
                </phone:LongListSelector.GroupHeaderTemplate>
            </phone:LongListSelector>
        </Grid>

    </Grid>

</phone:PhoneApplicationPage>